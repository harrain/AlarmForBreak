<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_frame_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar"
            android:id="@+id/tb_main"/>

        <LinearLayout
            android:id="@+id/ll"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#d0edc3"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="工作计时时间:"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_inform_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="55分钟"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="休息间隔时间:"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_interval_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="10分钟"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="振动类型："
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_inform_vibrate_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="魔音一"
                android:layout_marginBottom="10dp"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提示标题："
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_inform_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="时间到啦，注意用眼"
                android:layout_marginBottom="10dp"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提示内容："
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_inform_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="关爱眼睛，从我做起。\n——许佳佳"
                android:layout_marginBottom="10dp"
                android:textSize="20sp" />
        </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="#d0edc3"
           android:padding="10dp"
           android:gravity="center"
           android:orientation="horizontal">
           <android.support.design.widget.FloatingActionButton
               android:id="@+id/bt_start_inform"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:backgroundTint="@color/colorPrimary"
               app:elevation="@dimen/button_elevation"
               app:rippleColor="#b2a5f2"
               android:src="@mipmap/home_finish"
               />
           <android.support.design.widget.FloatingActionButton
               android:visibility="gone"
               android:id="@+id/bt_stop_inform"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:backgroundTint="@color/colorPrimary"
               app:elevation="@dimen/button_elevation"
               app:rippleColor="#b2a5f2"
               android:src="@mipmap/close_yu"
               />
       </LinearLayout>
    </LinearLayout>


    <fragment
        android:id="@+id/id_left_menu"
        android:name="com.example.protectyoureyes.Fragment.MenuLeftFragment"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:tag="LEFT"
        tools:layout="@layout/layout_menu" />


</android.support.v4.widget.DrawerLayout>